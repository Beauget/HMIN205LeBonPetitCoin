<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp">


    <TextView
        style="@style/headerTextPrimary"
        android:id="@+id/titre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Titre"
        android:textSize="25sp"
        android:textStyle="bold" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/seal"/>

            <ImageView
                android:id="@+id/image2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/seal"/>
            <ImageView
                android:id="@+id/image3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/seal"/>

            <ImageView
                android:id="@+id/image4"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/seal"/>
            <ImageView
                android:id="@+id/image5"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/seal"/>

            <ImageView
                android:id="@+id/image6"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/seal"/>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical"
            >
            <TextView
                android:text="@string/afin_de_ne_pas_abuser_de_la_modification_nous_avons_interdit_le_changement_d_images_veuillez_cr_e_une_nouvelle_annonce_et_supprimer_celle_i_au_besoins"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/teal_transparent"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/titreEditText"
                android:hint="@string/modifier_le_titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/modifiedEditText"/>

            <TextView
                android:text="@string/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/gradient_color"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/descriptionTextView"
                android:text="@string/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
 />
            <EditText
                android:id="@+id/descriptionEditText"
                android:hint="@string/modifier_la_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/modifiedEditText"/>

            <TextView
                android:text="@string/prix"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/gradient_color"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/prixTextView"
                android:text="@string/prix"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/prixEditText"
                android:hint="@string/modifier_le_prix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                style="@style/modifiedEditText"/>

            <TextView
                android:text="@string/moyen_de_paiement_s"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/gradient_color"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/moyenDePaiementTextView"
                android:text="@string/moyen_de_paiement"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/LMoyenDePaiement"
                android:layout_height="150dp"
                android:layout_width="match_parent"/>

            <TextView
                android:text="@string/cat_gorie_s"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/gradient_color"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/CategorieTextView"
                android:text="@string/cat_gorie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/LCategorie"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <com.google.android.material.button.MaterialButton
                style="@style/gradientButton"
                android:id="@+id/valider"
                android:text="@string/valider"
                app:backgroundTint="@null"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/loginViewsMargin"/>

            <com.google.android.material.button.MaterialButton
                style="@style/viewParent"
                android:background="@drawable/rounded_rectangle_orange"
                android:id="@+id/supprimer"
                android:text="@string/supprimer"
                app:backgroundTint="@null"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/loginViewsMargin"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>